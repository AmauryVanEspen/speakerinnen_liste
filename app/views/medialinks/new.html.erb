<section class="content--bg-grey pb+">
  <div class="layout-wrapper">

    <div class="layout">
      <div class="layout__item 2/3">

        <h1><%= t(:new, scope: 'medialinks')%></h1>

      </div><!--
      --><div class="layout__item 1/3">

        <%= link_to(t(:home, scope: 'profiles.edit'), profiles_path, class: 'content__link--bg') %><br>
        <%= link_to(t(:show, scope: 'profiles.edit'), @profile, class: 'content__link--bg') %>

      </div>
    </div>

    <div class="layout">
      <div class="layout__item 2/3 bg--white">
        <%= simple_form_for [@profile, @medialink], html: {class: ''} do |f| %>

          <%= f.input :url, as: :string, input_html: { class: 'mb input--width-100' }  %>
          <%= f.input :title, as: :string, input_html: { class: 'mb input--width-100' }  %>
          <%= f.input :description, as: :text, input_html: { rows: 10, class: 'mb input--width-100' }  %>

          <%= f.button :submit, t(:new, scope: 'medialinks'), class: 'btn btn--small' %>

        <% end %>
      </div>
    </div>
  </div>
</section>
